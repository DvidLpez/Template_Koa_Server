{
  "name": "template_koa_server",
  "version": "1.0.0",
  "description": "Koa server with Graphql and REST endpoints",
  "main": "index.js",
  "scripts": {
    "start": "node build/server/koa/server.js",
    "dev": "nodemon --watch 'packages/**/*.ts' --ignore 'packages/**/*.spec.ts' --exec ts-node packages/server/koa/server.ts",
    "build": "npx tsc --skipLibCheck && copyfiles --up 2 packages/server/graphql/schema/app.graphql build/server"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.2",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^18.11.19",
    "@types/node-fetch": "^2.6.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "apollo-boost": "^0.4.9",
    "apollo-datasource-rest": "^3.5.2",
    "apollo-server-koa": "^3.12.0",
    "copyfiles": "^2.4.1",
    "graphql": "^15.8.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-json": "^2.0.2",
    "koa-jwt": "^4.0.4",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.0",
    "mongodb": "^5.7.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  }
}
